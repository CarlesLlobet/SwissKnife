<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.carlesllobet.swissknife">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_swissknife"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Domain.Main"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.PasswordActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".UI.HomeActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".UI.HelpMPActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".UI.HelpSettingsActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".UI.HelpMemoryActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".UI.HelpCalculatorActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".UI.LoginActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/app_name"> <!--windowSoftInputMode serveix perque no surti automaticament el teclat-->
        </activity>
        <activity
            android:name=".UI.MediaPlayerActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".UI.MemoryActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".UI.Memory2Activity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".UI.RegisterActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".UI.RankingHolder"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".UI.CalculatorActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".UI.MenuActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".UI.SettingsActivity"
            android:configChanges="locale"
            android:label="@string/app_name" >
        </activity>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
